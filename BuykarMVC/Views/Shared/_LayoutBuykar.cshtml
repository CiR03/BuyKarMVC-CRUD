  <nav class="navbar navbar-expand-lg bg-info navbar-light fs-6 h1">
    <div class="container-fluid">
        <a asp-controller="Home" asp-action="Index" ><img src="~/Img/Logo.png" alt="BrandName" style="width: 80px; height: 30px;" class="me-5 ms-2"></a>
