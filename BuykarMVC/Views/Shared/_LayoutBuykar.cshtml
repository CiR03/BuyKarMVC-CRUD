              </li>
              <li><a class="dropdown-item" href="#">E-Vehical</a></li>
            </ul>
          </li>
        </ul>
        <form class="d-flex">
                    @if (ViewData["UserName"] != null)
                    {
                        <button class="btn btn-outline-light" asp-controller="Home" asp-action="Index" type="submit">LogOut</button>
                    }
                    else
                    {
                        <button class="btn btn-outline-light" asp-controller="CRUD" asp-action="Login" type="submit">LogIn</button>
                    }
                    @if (ViewData["UserName"]!= null)
                    {
                        <span class="ms-1 border rounded p-2">Welcome @ViewData["UserName"]</span>
                    }
                    else
                    {
                        <span class="ms-1 border rounded p-2">Guest!</span>
                    }
                </form>
      </div>
    </div>
  </nav>


