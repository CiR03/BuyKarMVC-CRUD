<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Buykar.css"/>

</head>
<body>
      <!-------Navbar------->
  <nav class="navbar navbar-expand-lg bg-info navbar-light fs-6 h1">
    <div class="container-fluid">
            <img src="~/Img/Logo.png" alt="BrandName" style="width: 80px; height: 30px;" class="me-5 ms-2">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 text-white">
          <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
          </li>
          <li class="nav-item">
                        <a class="nav-link" asp-controller="CRUD" asp-action="Index">Customer Details </a>
          </li>
        </ul>
        <form class="d-flex">
          <button class="btn btn-outline-light me-2" asp-controller="CRUD" asp-action="SignUp" type="submit">SignUp</button>
          <button class="btn btn-outline-light" asp-controller="CRUD" asp-action="Login" type="submit">Login</button>
        </form>
      </div>
    </div>
  </nav>


    <div class="container">
        <main role="main" class="pb-5">
        @RenderBody()
        </main>
    </div>

    <footer class="text-white text-center mt-5">
        <!-- Copyright -->
        <div class="footer border bg-info container-fluid mt-2">
            <span>© 2024 Copyright:</span>
            <a href="">MDBuyKar.com</a>
        </div>
        <!-- Copyright -->

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
